{
  "name": "lingocloud",
  "displayName": "Lingocloud - Web Translation Extension",
  "private": true,
  "version": "1.15.0",
  "type": "module",
  "description": "A bilingual translation extension that delivers a native reading experience at the Click of a button.",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite --host",
    "dev:js": "npm run build:js -- --mode development",
    "build": "vite build --host",
    "build:js": "vite build --config vite.config.content.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium --start-url https://www.google.com/",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tsconfig/svelte": "^5.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.19",
    "@types/webextension-polyfill": "^0.10.7",
    "@unocss/reset": "^0.58.5",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "esno": "^4.0.0",
    "fs-extra": "^11.2.0",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "svelte": "^4.2.11",
    "svelte-check": "^3.6.4",
    "svelte-preprocess": "^5.1.3",
    "terser": "^5.27.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "unocss": "^0.58.5",
    "unplugin-auto-import": "^0.17.5",
    "vite": "^5.1.4",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  }
}
